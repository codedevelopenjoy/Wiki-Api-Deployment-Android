<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="#baf0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Font Settings"
            android:textColor="@color/unique_text3"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/background_common">

            <!--FONT SIZE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:text="Size"
                    android:textSize="16sp"
                    android:typeface="monospace" />


                <EditText
                    android:id="@+id/size"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="16"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:typeface="monospace"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <!--FONT COLOR-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="85"
                    android:gravity="center_vertical"
                    android:text="Color"
                    android:textSize="16sp"
                    android:typeface="monospace" />


                <ImageView
                    android:id="@+id/i_p_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="15"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:background="@color/colorAccent"
                    tools:ignore="LabelFor"/>


            </LinearLayout>

            <!--FONT FAMILY-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:text="Family"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tv_p_family"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="AaBbCcDdEe"
                    android:textSize="14sp"
                    android:typeface="monospace"
                    tools:ignore="LabelFor" />

                <TextView
                    android:textColor="@color/unique_text1"
                    android:id="@+id/family"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Monospace"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:typeface="monospace"
                    tools:ignore="LabelFor" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Background Settings"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/unique_text3"
            android:textStyle="bold"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/background_common">

            <!--BACKGOUND COLOR-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="85"
                    android:gravity="center_vertical"
                    android:text="Color"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <ImageView
                    android:id="@+id/i_p_bcolor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="15"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:background="@color/colorAccent"
                    tools:ignore="LabelFor" />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Directory Setting"
            android:textColor="@color/unique_text3"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_common"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <!--FOLDER NAME-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:text="Saving Folder"
                    android:textSize="14sp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/savefolder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text="Encyclopedia"
                    android:textSize="15sp"
                    android:typeface="monospace"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <!--IMAGE QUALITY-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:text="Image Quality"
                    android:textSize="14sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/quality"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:text="Medium"
                    android:textColor="@color/unique_text1"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:typeface="monospace"
                    tools:ignore="LabelFor" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>